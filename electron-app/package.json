{
  "name": "ecpay-pos",
  "version": "1.0.0",
  "description": "ECPay POS Terminal",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "build:go:win": "cd ../server && GOOS=windows GOARCH=amd64 go build -ldflags=\"-s -w\" -o ../electron-app/resources/bin/ecpay-server.exe .",
    "build:go:mac": "cd ../server && go build -ldflags=\"-s -w\" -o ../electron-app/resources/bin/ecpay-server .",
    "build:go": "npm run build:go:mac"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.312.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.ecpay.pos",
    "productName": "ECPay POS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/bin/",
        "to": "bin/",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "resources/bin/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
}
